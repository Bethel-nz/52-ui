{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "./",
		"paths": {
			"~*": ["src/*", "*"],
			"~ui/*": ["src/components/ui/*", "components/ui/*"],
			"~route/*": ["src/routes/*", "routes/*"],
			"~layout/*": ["src/layout/*", "layout/*"],
			"~components/*": ["src/components/*", "components/*"],
			"~hooks/*": ["src/hooks/*", "hooks/*"],
			"~pages/*": ["src/components/pages/*", "pages/*"],
			"~store/*": ["src/store/*", "store/*"],
			"~assets/*": ["src/assets/*", "assets/*"],
			"~utils/*": ["src/utils/*", "utils/*"]
		},
		"typeRoots": ["./node_modules/@types", "./app/types"]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
